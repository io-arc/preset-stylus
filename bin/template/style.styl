@charset "UTF-8"
@require "assets/_init.styl"

// *********** Reset *********** //
html
  vertical-align: text-bottom
  font-size: $html-base-font-size

body
  margin: 0
  padding: 0
  color: $color-text-primary-base
  font-family: $font-default
  font-size: $font-size-large-base
  -webkit-font-smoothing: subpixel-antialiased
  -moz-osx-font-smoothing: grayscale
  //text-rendering: optimizeLegibility
  -webkit-text-size-adjust: 100%
  vertical-align: bottom
  @media $mq-medium
    font-size: $font-size-medium-base
  @media $mq-small
    font-size: $font-size-small-base

figure
  margin: 0
  padding: 0

h1
h2
h3
h4
h5
h6
  padding: 0
  margin: 0

p
  margin-top: 0

img
  vertical-align: bottom
  max-width: 100%
  height: auto

code
  font-family: $_f_code
  font-weight: normal

a
  &:link
  &:visited
    color: $color-link
    text-decoration: none
  &:hover
    color: $color-link-hover
    text-decoration: underline
  &:active
    color: $color-link
    text-decoration: none

input
button
textarea
  font-family: $font-default

// *********** Components *********** //
@require "components/utility/_chore.styl"
@require "components/utility/_space.styl"
@require "components/utility/_typography.styl"