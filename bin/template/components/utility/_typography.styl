@require "../../assets/_init.styl"

.typography
  &-copy
    font-size: $font-size-large-base
    font-weight: normal
    line-height: vertical-rhythm(1, unit($font-size-large-base, ''))
    @media $mq-medium
      font-size: $font-size-medium-base
      line-height: vertical-rhythm(1, unit($font-size-medium-base, ''))
    @media $mq-small
      font-size: $font-size-small-base
      line-height: vertical-rhythm-small(1, unit($font-size-small-base, ''))